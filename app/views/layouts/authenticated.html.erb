<main class="bg-zinc-800 flex flex-col h-full w-full">
  <% if user_signed_in? %>
    <%= button_to(
      "Log Out",
      destroy_user_session_path,
      class: "button absolute right-4 top-4",
      method: :delete
    ) %>
  <% end %>
  <div class="flex flex-col items-center justify-center my-8">
    <%= image_tag("final_girl_logo", class: "w-60") %>
    <p class="text-zinc-100 text-xl uppercase">Achievement Tracker</p>
  </div>
  <div class="bg-zinc-900 rounded-t-3xl px-8 py-4 flex flex-col flex-1 w-full mt-4">
    <%= render template: 'layouts/application' %>
  </div>
</main>
