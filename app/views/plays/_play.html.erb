<tr id="<%= dom_id play %>" class="odd:bg-zinc-600 even:bg-zinc-700 text-zinc-50 flex flex-col relative sm:table-row first:rounded-t-lg last:rounded-b-lg">
  <td class="text-left py-3 px-4">
    <div class="flex flex-col">
      <span><%= play.created_at.to_fs(:long) %></span>
      <span class="text-sm text-zinc-400"><%= time_ago_in_words play.created_at %> ago</span>
    </div>
  </td>
  <td class="text-left md:py-3 px-4">
    <div class="flex flex-row items-center">
      <span class="font-bold"><%= play.final_girl.name %></span>
    </div>
  </td>
  <td class="text-left md:py-3 px-4">
    <div class="flex flex-row items-center">
      <% if play.killer.icon.attached? %>
        <div class="mr-2 h-5 w-5 sm:w-7 sm:h-7">
          <%= image_tag rails_blob_path(play.killer.icon), class: "aspect-square w-5 sm:w-7" %>
        </div>
      <% end %>
      <span class="font-bold"><%= play.killer.name %></span>
    </div>
  </td>
  <td class="text-left pb-3 md:py-3 px-4">
    <div class="flex flex-row items-center">
      <% if play.location.icon.attached? %>
        <div class="mr-2 h-5 w-5 sm:w-7 sm:h-7">
          <%= image_tag rails_blob_path(play.location.icon), class: "aspect-square w-5 sm:w-7" %>
        </div>
      <% end %>
      <span class="font-bold"><%= play.location.name %></span>
    </div>
  </td>
  <td class="py-3 px-4 pb-3 absolute top-1/2 right-1 sm:relative">
    <div class="flex md:justify-center items-center">
      <% if play.is_win %>
        <%= image_tag asset_path('recover-health.png'), class: "aspect-square h-7" %>
      <% else %>
        <%= image_tag asset_path('lose-health.png'), class: "aspect-square h-7" %>
      <% end %>
    </div>
  </td>
  <td class="py-3 px-4 absolute top-0 right-0 sm:relative">
    <div class="flex justify-center items-center">
      <%= link_to edit_play_path(play), class: "button h-7 w-7 bg-transparent hover:bg-zinc-800 mr-2" do %>
        <i class="fa-solid fa-pen-to-square"></i>
      <% end %>
      <%= button_to play_path(play), method: :delete, class: "button h-7 w-7 bg-transparent hover:bg-primary", form: { data: { turbo_confirm: "Are you sure you want to delete this play?" } } do %>
        <i class="fa-solid fa-trash-can"></i>
      <% end %>
    </div>
  </td>
</tr>
