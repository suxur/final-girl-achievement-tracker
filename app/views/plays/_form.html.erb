<%= form_with model: facade.model, class: "contents" do |form| %>
  <%= form.errors facade.model %>
  <div class="flex flex-col">
    <div class="mb-4">
      <%= form.label :final_girl_id, "Final Girl" %>
      <%= form.grouped_collection_select :final_girl_id, facade.grouped_final_girl_options, :last, :first, :last, :first, { prompt: "Select a Final Girl" }, class: "w-full mt-1", required: true %>
    </div>
    <div class="mb-4">
      <%= form.label :killer_id, class: "mb-2" %>
      <%= form.grouped_collection_select :killer_id, facade.series, :ordered_killers, :name, :id, :name, { prompt: "Select a Killer"}, include_blank: true, class: "w-full mt-1" %>
    </div>
    <div class="mb-4">
      <%= form.label :location_id, class: "mb-2" %>
      <%= form.grouped_collection_select :location_id, facade.series, :ordered_locations, :name, :id, :name, { prompt: "Select a Location"}, include_blank: true, class: "w-full mt-1" %>
    </div>
    <div class="mb-4">
      <%= form.label :created_at, "Play Date", class: "mb-2" %>
      <div class="w-full">
        <%= form.datetime_local_field :created_at, class: "bg-zinc-900 text-white rounded-md border-zinc-800 focus:ring-primary focus:border-transparent py-1 w-full mt-1", required: true, step: "1"  %>
      </div>
    </div>
    <div class="mb-4">
      <%= form.label :is_win, "Won?", class: "flex items-center" do %>
        <%= form.check_box :is_win, class: "mr-2 rounded" %>
        Won?
      <% end %>
    </div>
    <div class="mb-4">
      <%= form.label :extreme_horror_mode, "Extreme Horror Mode?", class: "flex items-center" do %>
        <%= form.check_box :extreme_horror_mode, class: "mr-2 rounded" %>
        Extreme Horror Mode?
      <% end %>
    </div>
  </div>
  <div class="mt-12 flex flex-row justify-end">
    <%= link_to "Back", plays_path, class: "button bg-transparent hover:bg-zinc-800 mr-2" %>
    <%= form.submit "Save" %>
  </div>
<% end %>
