<div class="container mx-auto">
  <h2 class="font-display text-primary text-4xl mb-8">Dashboard</h2>
  <div class="text-zinc-50 grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="md:col-span-2">
      <div class="mb-8">
        <h3 class="font-bold text-xl mb-2">Killer Achievements Progress</h3>
        <div class="flex flex-row">
          <div class="overflow-hidden h-8 text-xs flex rounded bg-zinc-200 w-full">
            <div style="width: <%= @facade.all_killer_achievement_progress %>%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-primary"></div>
          </div>
          <div class="w-20 flex justify-center items-center font-bold">
            <%= @facade.all_killer_achievement_progress %>%
          </div>
        </div>
      </div>
      <div>
        <h3 class="font-bold text-xl mb-2">Location Achievements Progress</h3>
        <div class="flex flex-row">
          <div class="overflow-hidden h-8 text-xs flex rounded bg-zinc-200 w-full">
            <div style="width: <%= @facade.all_location_achievement_progress %>%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-primary"></div>
          </div>
          <div class="w-20 flex justify-center items-center font-bold">
            <%= @facade.all_location_achievement_progress %>%
          </div>
        </div>
      </div>
    </div>
    <div class="flex flex-col justify-center items-center mt-8 md:mt-0">
      <h3 class="font-bold text-xl mb-2">Win/Loss</h3>
      <%= pie_chart @facade.play_chart_data, donut: true, legend: false, suffix: "%", dataset: {borderWidth: 5, borderColor: "#18181b"}, library: {plugins: {title:{color: "#fafafa"}}}  %>
    </div>
  </div>
</div>

